@page
@model AutoRepairCore.Pages.ServiceOrders.IndexModel
@{
    ViewData["Title"] = "Órdenes de Servicio";
}

<div class="d-flex align-items-center justify-content-between mb-4">
    <div class="d-flex align-items-center gap-2">
        <i class="bi bi-clipboard2-check fs-3 text-primary"></i>
        <h2 class="mb-0">Órdenes de Servicio</h2>
    </div>
    <a asp-page="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle me-1"></i>Nueva Orden
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-body p-0">
        <table class="table table-hover mb-0">
            <thead class="table-dark">
                <tr>
                    <th>Folio</th>
                    <th>Cliente</th>
                    <th>Vehículo</th>
                    <th>Fecha de Entrada</th>
                    <th>Entrega Estimada</th>
                    <th>Estado</th>
                    <th>Costo Total</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.ServiceOrders)
                {
                    var subtotal = item.OrderServices.Sum(os => os.Service.Cost * os.Quantity);
                    var total = subtotal + (subtotal * 0.16m);
                    string stateBadge = item.State switch {
                        "Abierta"    => "bg-primary",
                        "En proceso" => "bg-warning text-dark",
                        "Finalizada" => "bg-success",
                        "Cancelada"  => "bg-danger",
                        _            => "bg-secondary"
                    };
                    <tr>
                        <td class="fw-bold">#@item.Folio</td>
                        <td>@item.Vehicle.Customer.Name @item.Vehicle.Customer.FirstLastname</td>
                        <td>
                            @item.Vehicle.Brand @item.Vehicle.Model
                            <span class="badge bg-light text-dark border ms-1">@item.Vehicle.PlateNumber</span>
                        </td>
                        <td>@item.EntryDate.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>@item.EstimatedDeliveryTime.ToString("dd/MM/yyyy HH:mm")</td>
                        <td><span class="badge @stateBadge">@item.State</span></td>
                        <td class="fw-semibold">$@total.ToString("N2")</td>
                        <td>
                            <a asp-page="Details" asp-route-id="@item.Folio" class="btn btn-sm btn-outline-info">
                                <i class="bi bi-eye me-1"></i>Detalles
                            </a>
                            <a asp-page="Edit" asp-route-id="@item.Folio" class="btn btn-sm btn-warning">
                                <i class="bi bi-pencil me-1"></i>Editar
                            </a>
                            <a asp-page="Delete" asp-route-id="@item.Folio" class="btn btn-sm btn-danger">
                                <i class="bi bi-trash me-1"></i>Eliminar
                            </a>
                        </td>
                    </tr>
                }
                @if (!Model.ServiceOrders.Any())
                {
                    <tr>
                        <td colspan="8" class="text-center text-muted fst-italic py-4">
                            No hay órdenes de servicio registradas.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
